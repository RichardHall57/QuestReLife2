<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Vertical layout for text info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/assignment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/assignment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment description goes here"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="#444444"/>

        <TextView
            android:id="@+id/assignment_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade: 0"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/assignment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#555555"
            android:textStyle="italic"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/assignment_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due: Jan 01, 2025"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Delete button aligned to the right -->
    <Button
        android:id="@+id/button_delete_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:layout_marginStart="12dp"/>
</LinearLayout>
