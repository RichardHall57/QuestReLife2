<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Vertical layout for text info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/assignment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/navy_blue"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/assignment_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment description goes here"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/assignment_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grade: 0"
                android:textSize="14sp"
                android:textColor="@color/gold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/assignment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="@color/teal_700"
                android:textStyle="italic"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/assignment_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due: Jan 01, 2025"
                android:textSize="12sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <!-- Delete button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
