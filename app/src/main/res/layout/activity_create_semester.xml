<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003366"
    android:paddingVertical="32dp"
    android:paddingHorizontal="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Semester"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Semester Name -->
        <EditText
            android:id="@+id/semester_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Semester Name (e.g., Fall 2025)"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <!-- Start Date -->
        <EditText
            android:id="@+id/start_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp"/>

        <!-- End Date -->
        <EditText
            android:id="@+id/end_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp"/>

        <!-- Create Semester Button -->
        <Button
            android:id="@+id/create_semester_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Semester"
            android:backgroundTint="#6C00FF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:padding="14dp"/>

        <!-- Optional Delete Button -->
        <Button
            android:id="@+id/delete_semester_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Semester"
            android:backgroundTint="#D1493C"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:padding="14dp"/>
    </LinearLayout>
</ScrollView>


