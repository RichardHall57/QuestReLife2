<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back, Hero!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Profile Image with glowing card -->
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp"
            app:cardPreventCornerOverlap="false"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Profile image"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/profile_glow" />
        </androidx.cardview.widget.CardView>

        <!-- Stats Card with gradient -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="10dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/gradient_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Stats Header -->
                <TextView
                    android:id="@+id/tvStatsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Stats"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:layout_marginBottom="20dp"/>

                <!-- Level -->
                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:text="Level 5"/>

                <ProgressBar
                    android:id="@+id/level_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginBottom="24dp"
                    android:progress="65"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#D0D0D0"
                    android:indeterminate="false"
                    android:clipToOutline="true"/>

                <!-- XP -->
                <TextView
                    android:id="@+id/tvXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP: 1234 / 2000"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Quests -->
                <TextView
                    android:id="@+id/tvActiveQuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Quests: 3"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvCompletedQuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed Quests: 12"
                    android:textColor="@color/gold"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"/>

                <!-- Homework / Tests / Projects -->
                <TextView
                    android:id="@+id/tvHomework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/homework_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="80"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:id="@+id/tvTests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tests Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/test_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="50"
                    android:progressTint="@color/purple_500"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginBottom="18dp"/>

                <TextView
                    android:id="@+id/tvProjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Projects Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/project_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="70"
                    android:progressTint="@color/gold"
                    android:progressBackgroundTint="#E0E0E0"
                    android:layout_marginBottom="28dp"/>

                <!-- Quote -->
                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Adventure awaits those who level up!”"
                    android:textColor="@color/gold"
                    android:textStyle="italic"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"/>

                <!-- Open Quest Log Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Quest Log"
                    android:textColor="@color/gold"
                    android:backgroundTint="@color/navy_blue"
                    app:cornerRadius="24dp"
                    android:paddingHorizontal="36dp"
                    android:paddingVertical="16dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
