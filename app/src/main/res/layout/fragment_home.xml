<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Profile Image (circular) -->
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Profile image"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>
        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvStatsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Stats"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy_blue"
                    android:layout_marginBottom="20dp"/>

                <!-- Level -->
                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/level_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginBottom="24dp"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#EEEEEE"/>

                <!-- XP -->
                <TextView
                    android:id="@+id/tvXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_700"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvActiveQuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvCompletedQuests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp"/>

                <!-- Homework / Tests / Projects -->
                <TextView
                    android:id="@+id/tvHomework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/homework_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#EEEEEE"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tvTests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/test_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progressTint="@color/purple_500"
                    android:progressBackgroundTint="#EEEEEE"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tvProjects"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <ProgressBar
                    android:id="@+id/project_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progressTint="@color/gold"
                    android:progressBackgroundTint="#EEEEEE"
                    android:layout_marginBottom="28dp"/>

                <!-- Quote -->
                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gold"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"/>

                <!-- Open Quest Log Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Quest Log"
                    android:textColor="@color/gold"
                    android:backgroundTint="@color/navy_blue"
                    app:cornerRadius="20dp"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="14dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
