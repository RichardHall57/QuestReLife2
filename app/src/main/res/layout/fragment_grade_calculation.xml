<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/tvGradesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Academic Progress"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- GPA / Completion Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/assignment_gpa_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completion: 0%"
                    android:textSize="18sp"
                    android:textColor="@color/gold"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Bar Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/gpa_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Overall Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:text="Overall Level"
                    android:textSize="18sp"
                    android:textColor="@color/navy_blue"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_height="25dp"
                    android:layout_width="150sp"/>

                <ProgressBar
                    android:id="@+id/level_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#D0D0D0"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/grades_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Level up your knowledge every day!”"
                    android:textColor="@color/gold"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Homework Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/homework_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/homework_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/teal_700"
                    android:progressBackgroundTint="#EEEEEE"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/test_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/test_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/purple_500"
                    android:progressBackgroundTint="#EEEEEE"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Project Progress Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/project_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Progress"
                    android:textColor="@color/navy_blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/project_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/gold"
                    android:progressBackgroundTint="#EEEEEE"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Assignments RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/posts_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>
