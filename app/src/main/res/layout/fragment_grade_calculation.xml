<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".GradeCalculationFragment">

    <!-- GPA / Completion Text -->
    <TextView
        android:id="@+id/assignment_gpa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completion: 0%"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Bar Chart -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/gpa_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp" />

    <!-- Level / Progress Bar -->
    <ProgressBar
        android:id="@+id/level_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:progress="0"
        android:max="100"
        android:progressTint="@android:color/holo_blue_light"
        android:background="@android:color/darker_gray" />

    <!-- Homework Progress -->
    <TextView
        android:id="@+id/homework_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homework Progress"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/homework_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:progress="0"
        android:max="100"
        android:progressTint="@android:color/holo_orange_light"
        android:background="@android:color/darker_gray" />

    <!-- Test Progress -->
    <TextView
        android:id="@+id/test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Progress"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/test_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:progress="0"
        android:max="100"
        android:progressTint="@android:color/holo_green_light"
        android:background="@android:color/darker_gray" />

    <!-- Project Progress -->
    <TextView
        android:id="@+id/project_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Progress"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/project_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:progress="0"
        android:max="100"
        android:progressTint="@android:color/holo_red_light"
        android:background="@android:color/darker_gray" />

    <!-- RecyclerView for assignments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
